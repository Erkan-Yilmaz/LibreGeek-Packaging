#!/usr/bin/make -f

# Adjust vars in makefile
# `var  ?= VALUE'. only has an effect if the variable is not yet defined.

export prefix = /usr
export bindir = /usr/games
export DESTDIR=$(CURDIR)/debian/ftequake

%:
	dh $@

override_dh_auto_build:
	$(MAKE) -C engine sv-rel -j4
	$(MAKE) -C engine gl-rel -j4

override_dh_auto_install:
	$(MAKE) -C engine sv-rel install
	$(MAKE) -C engine gl-rel install
