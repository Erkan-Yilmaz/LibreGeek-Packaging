#!/usr/bin/make -f

ifeq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
maybe_debug = DEBUG=0
else
maybe_debug = DEBUG=1
endif

TOP = $(shell pwd)
DEB_INST := $(CURDIR)/debian/tmp

%:
	dh $@

override_dh_auto_clean:
	make -C engine clean

override_dh_auto_install:
	# These dirs are not created by the Makefile
	mkdir -p debian/tmp/usr/games debian/tmp/usr/share/pixmaps
	$(MAKE) -C engine sv-rel -j4 DESTDIR=$(DEB_INST) PREFIX=/usr install
	$(MAKE) -C engine gl-rel -j4 DESTDIR=$(DEB_INST) PREFIX=/usr install
