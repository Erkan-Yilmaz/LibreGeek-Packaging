#export DH_VERBOSE=1

%:
	dh $@ --parallel

OVERLAYSPATH=debian/libretro-common-overlays/usr/share/libretro/overlays

override_dh_auto_build:

override_dh_auto_install:
	rsync -av --progress . $(OVERLAYSPATH)/ --exclude debian --exclude .bzr --exclude .bzrignore --exclude .git

override_dh_auto_clean:
