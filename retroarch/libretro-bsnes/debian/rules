export DEB_CXXFLAGS_MAINT_STRIP=-O2
export DEB_CFLAGS_MAINT_STRIP=-O2

ARCH=$(shell dpkg-architecture -qDEB_HOST_ARCH)

# Needs to install lsb-release package
UBUNTU_VERSION=$(shell lsb_release -c | cut -f2)

ifeq ($(UBUNTU_VERSION),precise)
	# Needs to install ppa:dolphin-emu/gcc-for-dolphin, which provides gcc 4.9
	COMPILER=compiler=g++-4.9
endif

ifeq ($(ARCH),armhf)
	ARM=arch=arm
endif

%:
	dh $@ --parallel

override_dh_auto_build:
	dh_auto_build -- profile=accuracy ui=target-libretro $(ARM) $(COMPILER)
	dh_auto_build -- profile=balanced ui=target-libretro $(ARM) $(COMPILER)
	dh_auto_build -- profile=performance ui=target-libretro $(ARM) $(COMPILER)

override_dh_auto_test:

override_dh_auto_clean:
	$(MAKE) clean
