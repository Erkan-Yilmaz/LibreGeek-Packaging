#!/usr/bin/make -f

export DH_VERBOSE=1

prefix = /usr
datarootdir = $(prefix)/share
bindir = $(prefix)/games
libdir = $(prefix)/lib

%:
	dh $@

override_dh_auto_build:
	# Ugh, really nuget? Need to get ssl certs
	certmgr -ssl -m https://go.microsoft.com
	certmgr -ssl -m https://nugetgallery.blob.core.windows.net
	certmgr -ssl -m https://nuget.org
	# download and copy necessary thirdparty DLLs to the working directory
	make dependencies
	# Build the source
	make all

override_dh_auto_install:
	make install-all
