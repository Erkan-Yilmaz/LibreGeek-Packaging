#!/usr/bin/make -f

export DH_VERBOSE=1

prefix = /usr
datarootdir = $(prefix)/share
bindir = $(prefix)/games
libdir = $(prefix)/lib

%:
	dh $@

override_dh_auto_build:
	# sync certs (thanks nuget)
	cert-sync /etc/ssl/certs/ca-certificates.crt
	# Build any missing dependencies
	make dependencies
	# Build the rest of the source code
	make all

override_dh_auto_install:
	make install-all
